{
  "name": "@bigrack/mcp",
  "version": "0.1.2",
  "description": "MCP server for task/project & context management in AI development tools (Claude Code, Cursor)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "bigrack": "./dist/bin/bigrack.js",
    "bigrack-mcp": "./dist/bin/bigrack-mcp.js"
  },
  "files": [
    "dist/**/*",
    "models/**/*",
    "prisma/**/*",
    "prisma.config.ts",
    "prisma.config.js",
    "README.md",
    "LICENSE",
    "THIRD-PARTY-LICENSES.md"
  ],
  "bundledDependencies": [
    "@bigrack/shared"
  ],
  "scripts": {
    "build": "node scripts/generate-version.js && npm run prisma:generate && tsc && npm run copy:scripts && npm run copy:prisma",
    "copy:scripts": "mkdir -p dist/scripts && cp src/scripts/*.js dist/scripts/ 2>/dev/null || true",
    "copy:prisma": "cp -r src/generated dist/",
    "dev": "node scripts/generate-version.js && tsx watch src/daemon/server.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts' 'bin/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'bin/**/*.ts'",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run prisma:generate && node dist/scripts/download-models.js || true",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude-code",
    "cursor",
    "ai-assistant",
    "task-management",
    "project-management",
    "context-management",
    "rag",
    "vector-search",
    "semantic-search",
    "local-first",
    "sqlite",
    "embeddings"
  ],
  "author": "Baptiste MNH",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/baptiste-mnh/bigrack.dev.git",
    "directory": "packages/mcp"
  },
  "bugs": {
    "url": "https://github.com/baptiste-mnh/bigrack.dev/issues"
  },
  "homepage": "https://bigrack.dev",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@bigrack/shared": "*",
    "@modelcontextprotocol/sdk": "^1.24.2",
    "@noble/curves": "^1.3.0",
    "@noble/hashes": "^1.3.3",
    "@prisma/adapter-better-sqlite3": "^7.0.1",
    "@prisma/client": "^7.1.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^9.2.0",
    "bip39": "^3.1.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "dayjs": "^1.11.10",
    "dotenv": "^17.2.3",
    "eslint-config-next": "16.0.5",
    "express": "^5.1.0",
    "inquirer": "^9.2.12",
    "node-fetch": "^3.3.2",
    "open": "^10.2.0",
    "ora": "^8.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^10.3.1",
    "pino-rotating-file-stream": "^0.0.2",
    "prisma": "^7.1.0",
    "sqlite-vss": "^0.1.2",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.25.76"
  },
  "optionalDependencies": {
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@bigrack/config": "*",
    "@bigrack/shared": "*",
    "@eslint/eslintrc": "^3.3.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^5.0.5",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^3.0.0"
  }
}
